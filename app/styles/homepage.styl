@require 'colors.styl'

$vertical_gap = 50px

body, html
	background white
	font-family "Roboto", "Helvetica", Arial, sans-serif
	font-size 16px
	letter-spacing 0.25px

a
	color black
	text-decoration none

p a,
ol li a
	text-decoration none
	color black
	transition color 150ms ease
	
	padding-bottom 2px
	border-bottom 2px solid black

header > div,
header > nav
	display flex
	align-items center
	height 100%

header .left
	float left
	
header .left a 
	border-bottom none
	padding-bottom 0px

header .right
	float right	
	
	line-height 2.5em
	text-transform uppercase
	letter-spacing 2px
	font-weight 500
	
	font-size 12px
	

header
	width 100%
	height 75px
	
	font-weight 500

	color #404040
	
	border-bottom 1px solid $GRAY
	
header nav > div
	margin-right 50px

header.title
	font-weight 500

main
	display flex
	flex-direction column
	align-items center

#logo
	width 50px
	margin-left 25px
	margin-right 25px
	
	height @width
	
.classyimage
	background-repeat no-repeat
	background-size cover
	background-image url("/images/eyewireBackground.jpg")
	width 100%
	height 500px
	
	position relative
	
.content .tagline
	position absolute
	left 0px
	top -150px
	
	padding-left 100px
	padding-top 25px
	padding-bottom 25px
	padding-right 100px
	
	// font-size 24px
	background-color white
	
	// text-transform uppercase
	// letter-spacing 2px
	// font-weight 700
	
	box-shadow rgba(0, 0, 0, 0.15) 0px -5px 100px
	
section
	width 450px

#links
	float left

	line-height 1.5em
	color #b9b9b9
	width 200px
	border-top 1px solid #000

	position absolute
	top 158px
	right 110px
	
#links div
	color black
	font-size 12px
	text-transform uppercase
	font-weight 700
	letter-spacing 2px
	

#links ul
	list-style-type none
	font-weight 400
	font-size 14px
	
	padding 0px
	margin 0px

.content
	line-height 1.75em
	width 700px
	position relative
	top -225px
	background-color #FFF
	padding 100px
	padding-top 60px
	
	box-shadow rgba(0, 0, 0, 0.15) 0px -5px 100px

.content section > div
	margin-bottom 4em

h1
	margin-bottom 1.5em

