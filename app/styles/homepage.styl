@require 'colors.styl'

body, html
	background white
	font-family "Roboto", "Helvetica", Arial, sans-serif

header > div,
header > nav
	display flex
	align-items center
	height 100%

header .left
	float left

header .right
	float right	

header
	width 100%
	height 100px
	
	font-size 24px
	color #404040
	
	border-bottom 1px solid $GRAY
	
header nav > div
	margin-right 50px

header.title
	font-weight 500

#logo
	width 100px
	height @width
	
.classyimage
	background-repeat no-repeat
	background-size cover
	background-image url("/images/eyewireBackground.jpg")
	width 100%
	height 250px
	
	position relative
	
.classyimage .tagline
	position absolute
	left 100px
	bottom 50px
	
	padding 20px
	
	font-size 18px
	font-weight 500
	background-color white
	
#links
	float left
	margin-top 50px
	
	width 200px
	
#links ul
	list-style-type lower-greek

.content
	float left
	margin-left 100px
	margin-top 50px
	
	width 6in

