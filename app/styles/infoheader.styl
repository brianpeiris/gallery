@require 'colors.styl'

infoheader
	position relative
	
infoheader > div
	position relative
	
infoheader h2
	outline none
	cursor pointer
	margin-top 0
	padding-left 5px
	
infoheader hr
	display none
	height 1px 
	
	border 0
	border-top 1px solid $GRAY
	opacity 0.25
	
	padding 0
	
	margin 0
	margin-bottom 7.5px
	margin-left -15px
	margin-right -15px
	
infoheader hr.onscreen
	display block
	
infoheader .more
	display none
	position absolute
	top -4px
	right 0
	
	width 10px
	height @width
	
	font-weight 600
	
	cursor pointer
	outline none
	
	overflow visible !important

	color $GRAY

infoheader .more.onscreen
	display block

infoheader .rollup
	max-height 0px
	overflow-y hidden
	transition max-height 400ms ease-in-out
	
infoheader .rollup.onscreen
	max-height 200px
