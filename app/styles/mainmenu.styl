@require 'colors.styl'
@require 'characterization.styl'
@require 'app.styl'
@require 'viewer.styl'

.viewer .main-menu
	@extend .viewer .sidebar
	
	width $SIDEBAR_LEFT_WIDTH

	position absolute
	left initial
	right 450px
	
	min-width 100px
	
	box-shadow -2px 2px 5px 0 rgba(0, 0, 0, 0.26)

.viewer .fullscreen .main-menu 
	width 100vw

.viewer .main-menu div
	overflow-y scroll

.viewer .main-menu > div > div
	padding 25px
	border-bottom 1px solid gray
	
.viewer .main-menu > div > div:first-child,
.viewer .main-menu > div > div:nth-child(2)
	border-bottom 1px solid $BLACK
	
.viewer .main-menu div.title
	@extend .header
	
	font-size 14px
	
	border-bottom none
	box-shadow rgba(0,0,0,0.15) 0px 0px 50px
	height 50px
	box-sizing border-box
	
	display flex
	align-items center
	justify-content flex-end
	
	flex-shrink 0
	
	padding-left 25px
	padding-right 10px
	
.viewer .main-menu div.title .words
	position absolute
	left 25px
	
.viewer .main-menu li
	outline none
	line-height 25px

.viewer .menu,
.viewer .browse
	display none

.viewer .menu.onscreen,	
.viewer .browse.onscreen
	display block

.viewer .gallery
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-around	

.viewer .gallery .item
	cursor pointer
	outline none
	
	padding 15px
	border 1px solid #1a1a1a26
	width 290px
	min-height 362px 
	
	cursor pointer
	outline none
	border-radius 1%
	background #f2f2f2
	box-shadow 5px 5px 25px rgba($BLACK, 0.20)
	margin 20px
	box-sizing border-box
	margin-right 10px
	margin-left 10px
	transition background-color 150ms ease, border 150ms ease
	
	position relative

.viewer .gallery .item:hover
	background-color #f5f5f5
	border 1px solid hsla(40, 50%, 74%, 0.95)

.viewer .gallery .item .notsecurelyknown
	color gray

.viewer .gallery .item .header
	margin-bottom 15px
	text-transform none
	margin-left 5px

.viewer .gallery .item .count
	font-size 14px
	font-weight 600
	
	position absolute
	top 16px
	right 25px
