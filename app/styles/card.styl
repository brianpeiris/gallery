@require 'app.styl'
@require 'colors.styl'


.card
	background-color WHITE
	padding 15px
	margin-bottom 10px
	border-radius 5px
	box-shadow rgba(0,0,0,0.15) 0px 1px 3px
	
.card .flex
	width 100%
	height 100%
	display flex
	flex-direction column
	align-items flex-start
	flex-shrink 0
	
.card infoheader
	width 100%

.card infoheader h2
	width 100%
	
	line-height 1.5em
	
	color $BLACK2
	font-size 11px
	text-transform uppercase
	font-weight 700
	letter-spacing 2px
	
