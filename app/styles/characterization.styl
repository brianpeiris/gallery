@require 'colors.styl'
@require 'app.styl'

.viewer .sidebar
	width $SIDEBAR_RIGHT_WIDTH
	min-width $MIN_SIDEBAR_WIDTH
	max-width $MAX_SIDEBAR_WIDTH
	height 100vh

	position absolute
	top 0px
	left 95px
	
	box-sizing border-box
	box-shadow -2px 2px 5px 0 rgba(0, 0, 0, 0.26)
	z-index 100
	
	display flex
	flex-direction column
	
	overflow-y hidden
	
	background-color $WHITE
	
	line-height 1.5em
	
	font-size 14px
	
	transition width 400ms ease-in-out, min-width 400ms ease-in-out
	
.sidebar .characterization
	// overflow-x hidden
	// width 100%
	// display flex
	// flex-direction column
	
.sidebar.fullscreen .characterization
	flex-direction row
	flex-wrap wrap
	align-self center
	
.characterization-header
	display flex
	align-items center
	flex-direction row
	justify-content flex-end
	padding 15px
	padding-left 25px
	box-shadow rgba(0,0,0,0.15) 0px 0px 25px
	background-color WHITE
	
	flex-shrink 0

	box-sizing border-box
	height 75px
	z-index 10
	
.characterization-header h1
	@extend .header
	
	text-transform capitalize
	position absolute
	left 25px
	margin 0
	
.characterization .notSecurelyKnown
	color gray
	
.characterization .card
	background-color WHITE
	padding 15px
	margin-bottom 10px
	border-radius 5px
	box-shadow rgba(0,0,0,0.15) 0px 1px 3px
	
	display flex
	flex-direction column
	align-items flex-start
	
border-top 1px solid $GRAYlassification-header .rollup
	margin-bottom 10px
	
button.md-button.circular-button
	border-radius 100%
	width 50px
	height 50px
	padding 0
	margin 0
	min-width 0
	
.fullscreen-icon
	transition all 500ms ease-in-out
	
.fullscreen-icon + .md-ripple-container
	border-radius 100%
	
.rotate-ninety
	transform rotate(180deg)
	
.viewer .fullscreen .sidebar
	width 100vw
	min-width 100vw
	
.viewer .sidebar a
	line-height 1.75em

.viewer .sidebar p
	max-width 35em

.viewer .sidebar .celltypes
	text-transform capitalize

.viewer .sidebar h1
	margin-bottom 0.67em

.viewer .sidebar h2
	width 100%
	
	line-height 1.5em
	
	color $BLACK2
	font-size 11px
	text-transform uppercase
	font-weight 700
	letter-spacing 2px
	
.viewer .sidebar h4
	width 100%
	
	line-height 1.5em
	
	color $BLACK
	text-align center
	font-size 16px
	font-weight 400
	
.viewer .sidebar h3
	width 100%
	
	line-height 1.5em
	
	color $BLACK
	font-size 16px
	font-weight 400
	
.viewer .sidebar .characterization
	overflow-y scroll
	
	padding 10px
	
	flex-grow 1
	flex-shrink 1

@media all and (max-width: ($MIN_SIDEBAR_WIDTH / .33)) 
	.viewer .sidebar .characterization
		padding 10px	
		padding-top 15px

.viewer .sidebar table.classification td
	width 10em
	

.viewer .sidebar .footer ul
	columns 2
	list-style-type none
	
.viewer .sidebar .fullscreen
	position absolute
	top 25px
	right 50px
	
.viewer .sidebar .chart-view-container
	display flex
	flex-grow 1
	align-items flex-start
	flex-direction row
	
.viewer .sidebar .data-view-container:first-of-type
	padding-right 0
	max-width 100%
	width 100%

.viewer .sidebar.fullscreen .card
	flex-direction column

.viewer .sidebar.fullscreen .card:first-of-type
	width 300px
	
.viewer .sidebar.fullscreen .card
	width 44vw
	height @width
	
.header-rule
	width 100%

	
	
