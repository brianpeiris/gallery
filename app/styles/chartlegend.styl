@require 'colors.styl'

chartlegend	
	flex-shrink 0
		
	width 100%
	
	max-height 250px
	overflow scroll

	z-index 200
	
	display flex
	flex-direction row
	align-items center
	
	background-color $WHITE
	box-shadow rgba(0, 0, 0, 0.15) 0px 0px 100px
	
	padding 50px
	box-sizing border-box
	
chartlegend > div
	display flex
	flex-direction row
	align-items center
	justify-content center
	flex-wrap wrap
	
chartlegend .handle
	position absolute
	
	width 50px
	height 25px
	
	// background-color rgba(black, 0.1)

	top s('calc(25px - %s / 2)', @height)
	left s('calc(50% - %s / 2)', @width)

chartlegend .color-container
	display flex
	flex-direction row
	justify-content flex-start
	align-items center
	
	padding 10px
	padding-left 20px
	padding-right 20px
	
	cursor pointer
	outline none
	
	box-sizing border-box
	
chartlegend .color-container:hover
	background-color rgba($BLACK, 0.1)

chartlegend .color-container.hidden .color
	background-color transparent !important
	border-width 2px

chartlegend .color
	border solid
	border-width 9px
	border-radius 100%
	
	background-color transparent !important
	
	width 18px
	height @width
	
	margin-right 10px
	
	box-sizing border-box
	
	transition border-color 150ms ease, border-width 150ms ease, background-color 150ms ease

