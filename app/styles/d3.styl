@require 'colors.styl'

#stratification-chart
	position relative
	display block
	left 0
	top 0
	width 100%
	height 500px
	

#stratification-svg
	position relative
	display block
	left 0
	top 0
	width 100%
	height 100%

path 
	// stroke $BLACK
	stroke-width 1
	
.hit_line
	// stroke $BLACK
	stroke-width 10
	fill none

.series
	fill none
	
.axis path,
.axis line
	fill none
	stroke grey
	stroke-width 1
	shape-rendering crispEdges
	
.axis
	font-size 11px 	
	
.tick line
	opacity 0.2
	
.x.axis line
	opacity 1
	
.axis-label
	font-size 9px
	font-weight 700
	letter-spacing 2px
	text-transform uppercase
	text-rendering optimizeLegibility
	
.axis-label-minor
	font-weight 400
	
.sub-label
// 	font-size 9px
// 	font-weight 700
// 	letter-spacing 2px
	fill grey
	
.area
	fill $BLACK
	opacity 1
	
#tooltip
	position absolute
	text-align left
	line-height 1.5em
	width 60px 
	padding 20px
	font-size 11px
	font-family sans-serif
	opacity 0
	color $BLACK
	background $WHITE
	border-radius 5px
	pointer-events none
	box-shadow rgba(0,0,0,0.075) 0px 0px 50px
	
#tooltip h3
	text-align left
	font-size 11px
	margin 0
	text-transform uppercase
	
#tooltip hr
	text-align left
	margin 0
	margin-bottom 5px
	width 5px
	height 1px 
	left 0
	background-color $BLACK
	
#tooltip h4
	text-align left
	margin 0
	margin-top 5px
	font-size 10px
	letter-spacing 1px
	text-transform uppercase
	font-weight bold
	
#tooltip p
	text-align left
	margin 0
	font-size 11px
	font-weight normal
	

circle
	transition opacity 100ms ease
	fill $BLACK
	opacity 1
	